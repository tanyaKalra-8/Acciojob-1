import java.util.*;
import java.lang.*;
import java.io.*;

public class Main
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner sc = new Scanner (System.in);
        long n = sc.nextInt();
        long sum =0;
        for (long i=1; i<=n;i++){
          sum=sum+i;
        }
        System.out.println(sum);
	}
}
